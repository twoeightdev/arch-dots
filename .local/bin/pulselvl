#!/bin/bash

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
  icon="ðŸ”Š"
elif [ "$vol" -lt "30" ]; then
  icon="ðŸ”ˆ"
else
  icon="ðŸ”‰"
fi

bar=$(seq --separator="+" 0 "$((vol / 3))" | sed 's/[0-9]//g')
spaces=$(seq --separator="-" 0 "$(( 10 - (vol / 3) ))" | sed 's/[0-9]//g')

dunstify -a pulselevel -t 400 "$icon$bar$spaces$vol%"
paplay ~/.local/share/audio/beep-1.wav
